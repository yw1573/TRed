<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.yw1573.tred.fragment.DisplayData" />

        <variable
            name="bloodSugar"
            type="DisplayData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ttv_standard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{bloodSugar.standard}" />

        <TextView
            android:id="@+id/ttv_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@{bloodSugar.value + `mmol/L`}" />

        <TextView
            android:id="@+id/ttv_phase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{bloodSugar.phase}" />

        <TextView
            android:id="@+id/ttv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{bloodSugar.time}" />
    </LinearLayout>
</layout>
